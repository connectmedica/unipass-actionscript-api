package com.connectmedica.unipass.core {

	/**
	 * The UnipassDisplay class provides values that specify the way the Unipass dialogs are displayed.
	 *  
	 */
	public final class UnipassDisplay {
		
		/**
		 * Specifies that Unipass dialog should have "page" display style.
		 * 
		 */
		public static const PAGE:String = "page";
		
		/**
		 * Specifies that Unipass dialog should have "mobile" display style.
		 * 
		 */
		public static const MOBILE:String = "mobile";
		
		/**
		 * Specifies that Unipass dialog should have "popup" display style.
		 * 
		 */
		public static const POPUP:String = "popup";
		
	}
	
}